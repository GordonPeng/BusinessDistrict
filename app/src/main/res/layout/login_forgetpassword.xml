<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <com.lidroid.mutils.views.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dm088"
                android:layout_marginLeft="@dimen/dm024"
                android:gravity="center_vertical"
                android:text="您绑定的手机号为136****1311"
                android:textSize="@dimen/dm026"
                android:textColor="#41210f"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm100"
                android:background="@color/main"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="@dimen/dm000"
                    android:layout_weight="2"
                    android:hint="短信效验码"
                    android:background="@color/main"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm028"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dm024"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="@dimen/dm000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dm024"
                    android:gravity="center_vertical|right"
                    android:text="获取验证码"
                    android:textSize="@dimen/dm026"
                    android:textColor="#f5cb1e"/>

            </LinearLayout>

            <TextView
                android:id="@+id/login_forget_submit_tv"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/dm024"
                android:layout_marginLeft="@dimen/dm024"
                android:layout_height="wrap_content"
                android:text="提交"
                android:gravity="center"
                android:layout_marginTop="@dimen/dm080"
                android:background="@mipmap/loginbj"/>


        </LinearLayout>
    </com.lidroid.mutils.views.MyScrollView>

</LinearLayout>