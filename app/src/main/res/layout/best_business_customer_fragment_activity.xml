<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message_tv0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onTabClick"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="本周排行榜"
            android:textColor="@drawable/wode_textcolor_selector"
            android:textSize="@dimen/dm034" />


        <TextView
            android:id="@+id/message_tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onTabClick"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="总排行榜"
            android:textColor="@drawable/wode_textcolor_selector"
            android:textSize="@dimen/dm034" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <View
            android:id="@+id/message_tab0"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_weight="1"
            android:background="#f5cb1e" />

        <View
            android:id="@+id/message_tab1"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_weight="1"
            android:background="#00000000" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" />
</LinearLayout>