<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/banner" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm024"
            android:text="我的积分: "
            android:textColor="@color/txt_color"
            android:textSize="@dimen/dm028" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000"
            android:textColor="@color/txt_red"
            android:textSize="@dimen/dm028" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dm001"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm024"
            android:background="@drawable/lanjuxing_bg"
            android:gravity="center"
            android:text="兑换记录"
            android:textColor="@color/white"
            android:textSize="@dimen/dm024" />
    </LinearLayout>

    <com.lidroid.mutils.views.MyGridView
        android:id="@+id/home_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dm010">

    </com.lidroid.mutils.views.MyGridView>
</LinearLayout>