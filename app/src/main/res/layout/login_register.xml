<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <com.lidroid.mutils.views.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm403"
                android:layout_marginLeft="@dimen/dm024"
                android:layout_marginRight="@dimen/dm024"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm100"
                    android:background="@color/main"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm028" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm001"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm100"
                    android:background="@color/main"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="@dimen/dm000"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@color/main"
                        android:gravity="center_vertical"
                        android:hint="请输入验证码"
                        android:textColor="#999999"
                        android:textSize="@dimen/dm028" />

                    <TextView
                        android:layout_width="@dimen/dm000"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dm024"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="发送验证码"
                        android:textColor="#f5cb1e"
                        android:textSize="@dimen/dm026" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm001"
                    android:background="#e0e0e0" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm100"
                    android:background="@color/main"
                    android:gravity="center_vertical"
                    android:hint="请输入密码"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm028" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm001"
                    android:background="#e0e0e0" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm100"
                    android:background="@color/main"
                    android:gravity="center_vertical"
                    android:hint="请再次输入密码"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm028" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm024"
                android:layout_marginRight="@dimen/dm024"
                android:layout_marginTop="@dimen/dm080"
                android:background="@mipmap/loginbj"
                android:gravity="center"
                android:text="立即注册" />
        </LinearLayout>
    </com.lidroid.mutils.views.MyScrollView>

</LinearLayout>