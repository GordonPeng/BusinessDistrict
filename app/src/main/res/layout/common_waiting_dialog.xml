<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dm020"
    android:paddingLeft="@dimen/dm030"
    android:paddingRight="@dimen/dm030"
    android:paddingTop="@dimen/dm020" >

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:indeterminateDrawable="@drawable/common_custom_progressbar" />

    <TextView
        android:id="@+id/tv_common_waiting_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm020"
        android:singleLine="true"
        android:text="正在加载中..."
        android:textColor="@android:color/black"
        android:textSize="@dimen/dm024"
        android:textStyle="bold" />

</LinearLayout>