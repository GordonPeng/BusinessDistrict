<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <com.lidroid.mutils.views.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/crowdfundingui_bjt"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm024"
                android:text="项目名称"
                android:textColor="#41210f"
                android:textSize="@dimen/dm028" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm080"
                android:layout_marginLeft="@dimen/dm024"
                android:layout_marginRight="@dimen/dm024"
                android:background="@drawable/et"
                android:gravity="center_vertical"
                android:hint="请输入您的项目名称"
                android:paddingLeft="@dimen/dm014"
                android:textColor="#cbcbcb"
                android:textSize="@dimen/dm024" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm024"
                android:text="项目简介"
                android:textColor="#41210f"
                android:textSize="@dimen/dm028" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm240"
                android:layout_marginLeft="@dimen/dm024"
                android:layout_marginRight="@dimen/dm024"
                android:layout_marginTop="@dimen/dm010"
                android:background="@drawable/et"
                android:gravity="start"
                android:hint="请输入您的项简介"
                android:padding="@dimen/dm024"
                android:textColor="#cbcbcb"
                android:textSize="@dimen/dm024" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm024"
                android:text="项目所属"
                android:textColor="#41210f"
                android:textSize="@dimen/dm028" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm080"
                android:layout_marginLeft="@dimen/dm024"
                android:layout_marginRight="@dimen/dm024"
                android:background="@drawable/et"
                android:gravity="center_vertical"
                android:enabled="false"
                android:paddingRight="@dimen/dm038"
                android:drawableRight="@drawable/crowdfunding_my_xiala"
                android:hint="个人"
                android:paddingLeft="@dimen/dm014"
                android:textColor="#cbcbcb"
                android:textSize="@dimen/dm024" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm024"
                android:text="企业名称"
                android:textColor="#41210f"
                android:textSize="@dimen/dm028" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm080"
                android:layout_marginLeft="@dimen/dm024"
                android:layout_marginRight="@dimen/dm024"
                android:background="@drawable/et"
                android:gravity="center_vertical"
                android:hint="请输入您的企业名称"
                android:paddingLeft="@dimen/dm014"
                android:textColor="#cbcbcb"
                android:textSize="@dimen/dm024" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="发布"
                android:layout_marginTop="@dimen/dm080"
                android:background="@mipmap/vip_set_kupdate"/>

        </LinearLayout>
    </com.lidroid.mutils.views.MyScrollView>

</LinearLayout>