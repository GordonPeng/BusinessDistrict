<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dm305"
    android:layout_height="wrap_content"
    android:background="@color/main"
    android:orientation="vertical">


    <ImageView
        android:layout_width="@dimen/dm305"
        android:layout_height="@dimen/dm294"
        android:src="@drawable/shangpinimg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm014"
        android:text="妖精的口袋W几英寸期望夏装甜美收腰蕾丝短袖连衣裙"
        android:textColor="#666666"
        android:textSize="@dimen/dm022" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm012"
        android:layout_marginTop="@dimen/dm010"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000积分"
            android:textColor="#ff0000"
            android:textSize="@dimen/dm024" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dm001"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hong_bg"
            android:gravity="center"
            android:text="立即兑换"
            android:textColor="@color/white"
            android:textSize="@dimen/dm024" />

    </LinearLayout>

</LinearLayout>