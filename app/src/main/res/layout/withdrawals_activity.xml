<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <RelativeLayout
        android:id="@+id/relat_add_bank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm100"
        android:layout_marginTop="@dimen/dm010"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm024"
            android:background="@drawable/yinlian" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm104"
            android:text="银行卡"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/dm026" />

        <TextView
            android:id="@+id/txt_bank_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm024"
            android:drawablePadding="@dimen/dm010"
            android:drawableRight="@drawable/xiegang"
            android:text="中国银行"
            android:textColor="@color/txt_9"
            android:textSize="@dimen/dm026" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relat_weixin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm100"
        android:layout_marginTop="@dimen/dm001"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm024"
            android:background="@drawable/weixin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm104"
            android:text="微信"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/dm026" />

        <ImageView
            android:id="@+id/img_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm024"
            android:background="@drawable/xuanzhong" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relat_zhifubao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm100"
        android:layout_marginTop="@dimen/dm001"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm024"
            android:background="@drawable/zhifubao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm104"
            android:text="微信"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/dm026" />

        <ImageView
            android:id="@+id/img_zhifubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm024"
            android:background="@drawable/weixuanzhong" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm100"
        android:layout_marginTop="@dimen/dm010"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm024"
            android:text="转出金额"
            android:textColor="@color/txt_3"
            android:textSize="@dimen/dm030" />

        <EditText
            android:id="@+id/et_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm170"
            android:hint="每日上线10000.00元"
            android:maxLength="5"
            android:textColorHint="@color/txt_c"
            android:textSize="@dimen/dm026" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm020"
        android:layout_marginLeft="@dimen/dm024"
        android:textSize="@dimen/dm024"
        android:textColor="@color/txt_c"
        android:text="到账时间为一个工作日，提现金额不得小于十元"/>
    
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认转出"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dm024"
        android:layout_marginRight="@dimen/dm024"
        android:layout_marginTop="@dimen/dm080"
        android:textColor="@color/txt_color"
        android:textSize="@dimen/dm028"
        android:background="@mipmap/loginbj"/>
</LinearLayout>