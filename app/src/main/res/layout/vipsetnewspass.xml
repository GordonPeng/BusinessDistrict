<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <com.lidroid.mutils.views.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dm084"
                android:layout_marginLeft="@dimen/dm024"
                android:gravity="center_vertical"
                android:text="请输入您的旧密码"
                android:textColor="#41210f"
                android:textSize="@dimen/dm026" />

            <LinearLayout
                android:id="@+id/vip_set_newpassword_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm100"
                android:background="@color/main"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:background="@color/main"
                    android:layout_width="@dimen/dm000"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dm024"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="旧密码（6-16位英文或数字）"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm028" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dm084"
                android:layout_marginLeft="@dimen/dm024"
                android:gravity="center_vertical"
                android:text="设置您的新密码"
                android:textColor="#41210f"
                android:textSize="@dimen/dm026" />

            <LinearLayout
                android:id="@+id/vip_set_newpassword_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm100"
                android:background="@color/main"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:background="@color/main"
                    android:layout_width="@dimen/dm000"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dm024"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="新密码（6-16位英文或数字）"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm028" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dm001"
                android:id="@+id/vip_set_newpassword_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm100"
                android:background="@color/main"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:background="@color/main"
                    android:layout_width="@dimen/dm000"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dm024"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="确认新密码"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm028" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dm080"
                android:background="@mipmap/vip_set_kupdate"
                android:gravity="center"
                android:text="确认" />

        </LinearLayout>
    </com.lidroid.mutils.views.MyScrollView>

</LinearLayout>