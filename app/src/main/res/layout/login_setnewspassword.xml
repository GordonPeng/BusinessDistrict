<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <com.lidroid.mutils.views.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dm030"
                android:layout_marginLeft="@dimen/dm024"
                android:layout_marginTop="@dimen/dm030"
                android:gravity="center_vertical"
                android:text="设置新密码"
                android:textColor="#41210f"
                android:textSize="@dimen/dm026" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm201"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm100"
                    android:background="@color/main"
                    android:drawableLeft="@mipmap/loginpassword"
                    android:drawablePadding="@dimen/dm021"
                    android:gravity="center_vertical"
                    android:hint="请输入新密码"
                    android:paddingLeft="@dimen/dm030"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm028" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm001"
                    android:background="#e0e0e0" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm100"
                    android:layout_marginTop="@dimen/dm001"
                    android:background="@color/main"
                    android:drawableLeft="@mipmap/loginpassword"
                    android:drawablePadding="@dimen/dm021"
                    android:gravity="center_vertical"
                    android:hint="请再次输入新密码"
                    android:paddingLeft="@dimen/dm030"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm028" />
            </LinearLayout>

            <TextView
                android:id="@+id/login_forget_ok_tv"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/dm024"
                android:layout_marginLeft="@dimen/dm024"
                android:layout_height="wrap_content"
                android:text="完成"
                android:gravity="center"
                android:layout_marginTop="@dimen/dm080"
                android:background="@mipmap/loginbj"/>

        </LinearLayout>
    </com.lidroid.mutils.views.MyScrollView>

</LinearLayout>