<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <com.lidroid.mutils.views.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_marginTop="@dimen/dm010"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:background="@color/main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm100"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm024"
                    android:src="@drawable/location"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前定位城市:"
                    android:layout_marginLeft="@dimen/dm020"
                    android:textColor="#41210f"
                    android:textSize="@dimen/dm028"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京市"
                    android:layout_marginLeft="@dimen/dm020"
                    android:textColor="#ff6600"
                    android:textSize="@dimen/dm028"/>
            </LinearLayout>

            <LinearLayout
                android:background="@color/main"
                android:layout_marginTop="@dimen/dm002"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm100"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/dm000"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="选择城市"
                    android:layout_marginLeft="@dimen/dm024"
                    android:textColor="#41210f"
                    android:textSize="@dimen/dm028"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京市"
                    android:layout_marginLeft="@dimen/dm024"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm024"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朝阳区"
                    android:layout_marginLeft="@dimen/dm020"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm024"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm020"
                    android:layout_marginRight="@dimen/dm034"
                    android:src="@drawable/location_more"/>

            </LinearLayout>

        </LinearLayout>
    </com.lidroid.mutils.views.MyScrollView>

</LinearLayout>