<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm130">

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥249.00"
            android:layout_marginLeft="@dimen/dm024"
            android:layout_marginTop="@dimen/dm028"
            android:textColor="@color/txt_red"
            android:textSize="@dimen/dm036" />

        <TextView
            android:id="@+id/txt_tixian_dete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm022"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dm024"
            android:layout_marginBottom="@dimen/dm034"
            android:text="提现时间：2015-02-14 09:25"
            android:textColor="@color/txt_9"
            android:textSize="@dimen/dm018" />


        <TextView
            android:id="@+id/txt_bank_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="中国建设银行(0245)"
            android:layout_marginRight="@dimen/dm024"
            android:layout_marginTop="@dimen/dm030"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/dm024" />

        <TextView
            android:id="@+id/txt_daozhang_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm022"
            android:text="到账时间：2015-02-14 09:25"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dm024"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dm034"
            android:textColor="@color/txt_9"
            android:textSize="@dimen/dm018" />

    </RelativeLayout>
</LinearLayout>