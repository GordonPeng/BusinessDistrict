<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="@dimen/dm150"
        android:layout_height="@dimen/dm113"
        android:layout_margin="@dimen/dm024"
        android:src="@drawable/crowdfunding_lv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm024"
            android:text="母亲邮包助力阜宁受灾的妈妈"
            android:textColor="#41210f"
            android:textSize="@dimen/dm028" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm010"
            android:text="为阜宁受灾地区筹集母亲邮包“家庭包"
            android:textColor="#999999"
            android:textSize="@dimen/dm022" />

        <LinearLayout
            android:layout_marginTop="@dimen/dm020"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dm000"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2016-05-06"
                android:textColor="#cccccc"
                android:textSize="@dimen/dm020" />

            <CheckBox
                android:layout_width="@dimen/dm030"
                android:layout_height="@dimen/dm030"
                android:background="@drawable/crowdfundingdian"
                android:button="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="152赞"
                android:layout_marginRight="@dimen/dm024"
                android:layout_marginLeft="@dimen/dm010"
                android:textColor="#cccccc"
                android:textSize="@dimen/dm020" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>