<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm161">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="@dimen/dm150"
            android:layout_height="@dimen/dm113"
            android:layout_margin="@dimen/dm024" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dm024"
            android:layout_marginTop="@dimen/dm024"
            android:layout_toRightOf="@+id/img_icon"
            android:singleLine="true"
            android:text="和覅是电话覅还是好烦好烦好烦好"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/dm028" />

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title"
            android:layout_marginRight="@dimen/dm024"
            android:layout_marginTop="@dimen/dm020"
            android:layout_toRightOf="@+id/img_icon"
            android:singleLine="true"
            android:text="返回if会死哦发货哦啊好"
            android:textColor="@color/txt_9"
            android:textSize="@dimen/dm022" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dm024"
            android:layout_toRightOf="@+id/img_icon"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-05-16"
                android:textColor="@color/txt_c"
                android:textSize="@dimen/dm022" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dm001"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/img_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dm010"
                android:background="@drawable/dianzan" />

            <TextView
                android:id="@+id/txt_zan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dm024"
                android:text="125赞"
                android:textColor="@color/txt_c"
                android:textSize="@dimen/dm022" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>