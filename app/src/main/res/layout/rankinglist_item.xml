<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm120"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/diyiming"
            android:layout_marginLeft="@dimen/dm024" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_c"
            android:textSize="@dimen/dm030"
            android:layout_marginLeft="@dimen/dm024"
            android:text="4"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/xiaogou"
            android:layout_marginLeft="@dimen/dm020"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小锤子"
            android:layout_marginLeft="@dimen/dm020"
            android:textSize="@dimen/dm028"
            android:textColor="@color/txt_color"
            android:maxLength="6"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dm024"
            android:textSize="@dimen/dm028"
            android:textColor="@color/txt_color"
            android:text="100人"/>
    </LinearLayout>
</LinearLayout>