<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/content_bg">

    <include layout="@layout/title"/>

    <RelativeLayout
        android:id="@+id/relat_jianshe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm120"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dm010">

        <ImageView
            android:id="@+id/img_jianshe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm030"
            android:background="@drawable/jianshengyinhang"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_jianshe"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_jianshe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/dm028"
                    android:text="中国建设银行"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm024"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/dm024"
                    android:text="储蓄卡"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_jianshe_weihao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_9"
                android:textSize="@dimen/dm024"
                android:layout_marginTop="@dimen/dm015"
                android:text="尾号3965"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/xiegang"
            android:layout_marginRight="@dimen/dm024"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relat_zhongguo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm120"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dm001">

        <ImageView
            android:id="@+id/img_zhongguo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm030"
            android:background="@drawable/zhongguoyinhang"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_zhongguo"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_zhongguo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/dm028"
                    android:text="中国银行"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm024"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/dm024"
                    android:text="储蓄卡"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_zhongguo_weihao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_9"
                android:textSize="@dimen/dm024"
                android:layout_marginTop="@dimen/dm015"
                android:text="尾号3965"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/xiegang"
            android:layout_marginRight="@dimen/dm024"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>