<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dm168"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="@dimen/dm124"
            android:layout_height="@dimen/dm120"
            android:layout_marginTop="@dimen/dm024"
            android:layout_marginBottom="@dimen/dm024"
            android:layout_marginLeft="@dimen/dm024"/>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_6"
            android:layout_toRightOf="@+id/img_icon"
            android:layout_marginRight="@dimen/dm024"
            android:layout_marginTop="@dimen/dm024"
            android:textSize="@dimen/dm022"
            android:maxLines="2"
            android:layout_marginLeft="@dimen/dm020"
            android:text="回复是否合适回复是否合适纠纷司机发生分手费收费基金"/>

        <TextView
            android:id="@+id/txt_jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000积分"
            android:textSize="@dimen/dm022"
            android:layout_toRightOf="@+id/img_icon"
            android:layout_marginBottom="@dimen/dm024"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_alignParentBottom="true"
            android:textColor="@color/txt_red" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_6"
            android:textSize="@dimen/dm022"
            android:layout_marginRight="@dimen/dm024"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dm024"
            android:text="兑换时间：2016-01-12 12:20"/>

    </RelativeLayout>
</LinearLayout>