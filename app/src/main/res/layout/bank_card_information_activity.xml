<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm100"
        android:layout_marginTop="@dimen/dm010"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm024"
            android:text="卡类型"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/dm028" />

        <EditText
            android:id="@+id/et_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm156"
            android:hint="中国建设银行"
            android:layout_marginRight="@dimen/dm024"
            android:singleLine="true"
            android:textColorHint="@color/txt_9"
            android:textColor="@color/txt_0"
            android:textSize="@dimen/dm030" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm100"
        android:layout_marginTop="@dimen/dm001"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm024"
            android:text="手机号"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/dm028" />

        <EditText
            android:id="@+id/et_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm156"
            android:hint="银行预留手机号码"
            android:inputType="number"
            android:textColor="@color/txt_0"
            android:maxLength="11"
            android:textColorHint="@color/txt_9"
            android:textSize="@dimen/dm028" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dm024"
        android:layout_marginLeft="@dimen/dm024"
        android:layout_marginTop="@dimen/dm080"
        android:background="@mipmap/loginbj"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/txt_color"
        android:textSize="@dimen/dm028" />
</LinearLayout>